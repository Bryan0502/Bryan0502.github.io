---
import GitHub from "./icons/GitHub.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import JavaScript from "./icons/JavaScript.astro"
import PHP from "./icons/PHP.astro"
import CSS from "./icons/CSS.astro"
import HTML from "./icons/HTML.astro"
import ReactNative from "./icons/ReactNative.astro"
import ExpressJS from "./icons/ExpressJs.astro"

const TAGS = {
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#f0db4f] text-black",
    icon: JavaScript,
  },
  PHP: {
    name: "PHP",
    class: "bg-[#8892BF] text-white",
    icon: PHP,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#2965f1] text-white",
    icon: CSS,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#f06529] text-white",
    icon: HTML,
  },
  REACT_NATIVE: {
    name: "React Native",
    class: "bg-[#000000] text-white",
    icon: ReactNative,
  },
  EXPRESSJS: {
    name: "ExpressJS",
    class: "bg-[#000000] text-white",
    icon: ExpressJS,
  },
}
const PROJECTS = [
  {
    title: "DashteinBoard - ERP contable + POS",
    description:
      "Dashboard ERP contable para empresas con facturación electrónica. Incluye gráficos, tablas, exportación de datos a Excel y sistema de ventas POS. Creado con HTML, CSS, JS y PHP. ",
    link: "https://dashboardventas1.000webhostapp.com/",
    image: "/projects/dashteinboard.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT,TAGS.PHP],
  },
  {
    title: "PanamaBeerClub - App Móvil para entregar pedidos",
    description:
      "App móvil para entregar pedidos de cervezas artesanales en Panamá. Integración con la aplicación web de PanamaBeerClub. Creado con React Native y Express. ",
    github: "https://github.com/Bryan0502/APP_DS9-FRONTEND",
    image: "/projects/appmovil.webp",
    tags: [TAGS.REACT_NATIVE, TAGS.EXPRESSJS],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Imagen del Proyecto" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



